# ===========================================
# Faatere Environment Variables Template
# ===========================================
# Copy this file to .env and fill in the values

# ===========================================
# Docker Compose Services
# ===========================================

# PostgreSQL
POSTGRES_DB=faatere
POSTGRES_USER=faatere
POSTGRES_PASSWORD=faatere_dev_password

# MinIO (S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# ===========================================
# Backend Configuration
# ===========================================

# Database Connection
DATABASE_URL=postgresql://faatere:faatere_dev_password@localhost:5432/faatere

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# S3 Storage (MinIO in dev, Railway S3 in prod)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=faatere

# Application
NODE_ENV=development
PORT=3001

# ===========================================
# Frontend Configuration
# ===========================================

NEXT_PUBLIC_API_URL=http://localhost:3001
