# ========================================
# Backend Service Configuration
# ========================================
# Copy this file to .env for local development
# NEVER commit .env files with real secrets!

# ========================================
# Server
# ========================================
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# ========================================
# Database (override if different from root)
# ========================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=faatere
DATABASE_USER=faatere
DATABASE_PASSWORD=faatere_dev_password
DATABASE_URL=postgresql://faatere:faatere_dev_password@localhost:5432/faatere

# ========================================
# Test Database
# ========================================
TEST_DATABASE_HOST=localhost
TEST_DATABASE_PORT=5433
TEST_DATABASE_NAME=faatere_test
TEST_DATABASE_URL=postgresql://faatere:faatere_dev_password@localhost:5433/faatere_test

# ========================================
# JWT Authentication
# ========================================
JWT_SECRET=your_jwt_secret_min_32_chars_here
JWT_EXPIRATION=24h

# ========================================
# MinIO (local S3)
# ========================================
USE_MINIO=true
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=faatere-uploads

# S3 Compatible (uses same values as MinIO in dev)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=faatere-uploads

# ========================================
# Email (Resend)
# ========================================
RESEND_API_KEY=
EMAIL_FROM=noreply@faatere.pf

# ========================================
# Database Seeding
# ========================================
# Board users to create at deployment (format: email1:password1,email2:password2)
# Each user gets their own password, hashed with bcrypt (12 rounds)
# ⚠️  CHANGE THESE VALUES IN PRODUCTION!
BOARD_USERS=your-admin@your-domain.com:ChangeThisPassword123,your-user@your-domain.com:ChangeThisPassword456
